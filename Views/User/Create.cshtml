@model CrudApp.Models.UserModel

<h2>Criar card</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Idade" class="control-label"></label>
        <input asp-for="Idade" class="form-control" />
        <span asp-validation-for="Idade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mensagem" class="control-label"></label>
        <textarea asp-for="Mensagem" class="form-control"></textarea>
        <span asp-validation-for="Mensagem" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-4 w-100">Salvar</button>
</form>
